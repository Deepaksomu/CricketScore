
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/india_Image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/indiaflag" />

        <ImageView
            android:id="@+id/pakisthan_Image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/pakistanflag" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/activity_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context="com.example.deepak.cricketscore.MainActivity">

            <TextView
                android:id="@+id/india"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:text="india"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/india_runs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/india_1_runs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:onClick="addOneForindia"
                android:text="1 run"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/india_4_run"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:onClick="addFourForIndia"
                android:text="4 run"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/india_6_run"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:onClick="addSixForIndia"
                android:text="6 run"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/wickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:text="wickets"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/india_wickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_1_wicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:onClick="add1ForIndiawickets"
                android:text="wicket"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context="com.example.deepak.cricketscore.MainActivity">

            <TextView
                android:id="@+id/pakisthan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:text="pakisthan"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pakisthan_runs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/pak_1_runs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:onClick="addOneForPakisthan"
                android:text="1 run"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/pak_4_run"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:onClick="addFourForPakisthan"
                android:text="4 run"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/pak_6_run"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:onClick="addSixForPakisthan"
                android:text="6 run"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pakwickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:text="wickets"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pakisthan_wickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/pakisthan_1_wicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:onClick="add1ForPakisthanwickets"
                android:text="wicket"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:onClick="reset"
        android:text="reset"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="16sp" />


</RelativeLayout>